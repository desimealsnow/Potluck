{
  "private": true,
  "workspaces": ["apps/*"],
  "scripts": {
    "start:server": "npm start  -w @potluck/server",
    "start:mobile": "npm start  -w @potluck/mobile",

    "dev:server":   "npm run dev -w @potluck/server",
    "dev:mobile":   "npm run start -w @potluck/mobile",   

    "dev": "npm-run-all --parallel dev:server dev:mobile"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"          
  }
}
