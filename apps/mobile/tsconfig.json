{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/utils/*": ["src/utils/*"],
      "@/types/*": ["src/types/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/services/*": ["src/services/*"],
      "@/config/*": ["src/config/*"],
      "@common/*": ["../../libs/common/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["__tests__", "tests", "e2e", "figma", "eslint.config.js"]
}
