{
  "name": "potluck-server",
  "version": "0.1.0",
  "description": "Express API for the Potluck application (Supabase backend)",
  "main": "dist/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "dev:debug": "cross-env NODE_ENV=development tsx watch --inspect-brk src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,json,md}\"",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:unit": "cross-env NODE_ENV=test jest tests/unit",
    "test:integration": "cross-env NODE_ENV=test jest tests/integration",
    "test:rls": "cross-env NODE_ENV=test npm run test:pg",
    "test:pg": "echo 'pgTap tests - see tests/pg/README.md for setup'",
    "test:lemonsqueezy": "node scripts/test-lemonsqueezy.js",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:ci": "cross-env NODE_ENV=test jest --ci --coverage --watchAll=false",
    "test:legacy": "cross-env NODE_ENV=test vitest",
    "test:billing": "./scripts/test-billing-comprehensive.sh",
    "test:billing:unit": "cross-env NODE_ENV=test jest tests/unit --testPathPattern=\"billing|payment\"",
    "test:billing:integration": "cross-env NODE_ENV=test jest tests/integration/billing-comprehensive.spec.ts",
    "test:rest:nearby": "powershell -NoProfile -ExecutionPolicy Bypass -File ./tests/rest/cases/location-nearby.ps1",
    "db:inspect:notifications": "node scripts/inspect-notifications.js",
    "schema:generate": "npx openapi-zod-client ../../docs/api-spec.yaml -o src/validators.ts",
    "schema:validate": "node scripts/validate-schema.mjs",
    "schema:validate:verbose": "node scripts/validate-schema.mjs --verbose",
    "schema:check": "node scripts/validate-schema.mjs --verbose",
    "schema:capture": "node scripts/capture_schema.mjs",
    "schema:capture:ps1": "powershell -ExecutionPolicy Bypass -File scripts/capture_schema.ps1",
    "schema:capture:bash": "bash scripts/capture_schema.sh",
    "schema:types": "supabase gen types typescript --db-url $SUPABASE_DB_URL > src/types/database.types.ts",
    "schema:all": "npm run schema:capture && npm run schema:types"
  },
  "dependencies": {
    "@payments/core": "*",
    "@repo/common": "^0.1.0",
    "@zodios/core": "^10.9.6",
    "express": "^4.19.2",
    "nodemailer": "^7.0.6",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@faker-js/faker": "^8.4.1",
    "@supabase/postgrest-js": "^1.21.4",
    "@supabase/supabase-js": "^2.57.4",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.8",
    "@types/nock": "^10.0.3",
    "@types/node": "^20.19.17",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "debug": "^4.4.3",
    "dotenv": "^17.2.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.4",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "nock": "^13.5.6",
    "prettier": "^3.1.0",
    "supabase": "^2.26.9",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.35.1",
    "winston": "^3.17.0",
    "zod": "^4.1.11"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT"
}
