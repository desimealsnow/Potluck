{
  "name": "potluck-server",
  "version": "0.1.0",
  "description": "Express API for the Potluck application (Supabase backend)",
  "main": "dist/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "dev:debug": "cross-env NODE_ENV=development tsx watch --inspect-brk src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,json,md}\"",
    "test": "cross-env NODE_ENV=test vitest",
    "test:ui": "cross-env NODE_ENV=test vitest --ui",
    "test:debug": "cross-env NODE_ENV=test vitest run --inspect-brk --no-file-parallelism",
    "test:coverage": "cross-env NODE_ENV=test vitest run --coverage"
  },
  "dependencies": {
    "@repo/common": "^0.1.0",
    "@supabase/supabase-js": "^2.41.0",
    "@zodios/core": "^10.9.6",
    "cors": "^2.8.5",
    "debug": "^4.4.1",
    "dotenv": "^16.4.0",
    "express": "^4.19.2",
    "nodemailer": "^7.0.4",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/cors": "^2.8.19",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.1",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.4",
    "globals": "^16.3.0",
    "prettier": "^3.1.0",
    "supabase": "^2.26.9",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.35.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT"
}
