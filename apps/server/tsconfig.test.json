{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // More lenient settings for tests
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    
    // Enable all Jest/test-related types
    "types": ["jest", "node", "@types/supertest"],
    
    // Allow importing from test directories
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"],
      "@common/*": ["../../libs/common/src/*"]
    },

    // Test-specific compiler options
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  
  "include": [
    "src/**/*",
    "tests/**/*",
    "../../libs/common/src/**/*"
  ],
  
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "test-results"
  ]
}